{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


    <div class="row justify-content-between">

        <div class="col-sm-auto">

            <h4 class="text-info">

                {{ operas[0].typeName }} <i class="fa fa-arrow-right"></i> {{ operas[0].name }}


            </h4>

        </div>

        <div class="col text-right">

            <h4 class="text-danger">

                {{ 'from'|trans }}: {{ from }} {{ 'to'|trans }}: {{ to }}
            </h4>

        </div>

    </div>

    <hr>

    <div class="row justify-content-between">

        <div class="col-sm-auto">

            <h4 class="text-info">



            </h4>

        </div>

        <div class="col text-right">

            <h4 class="text-danger">
                <button type="button" class="btn btn-primary">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                </button>
            </h4>

        </div>

    </div>


    <br>

    <div class="row">



            <table class="table table-striped table-hover table-responsive">
                <thead>
                <tr>
                    <th>Dr. </th>
                    <th>{{ 'label.place'|trans }}</th>
                    <th></th>
                    <th>{{ 'label.patient'|trans }}</th>
                    <th></th>
                    <th class="text-right">{{ 'label.made_at'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for opera in operas %}
                    <tr>
                        <td>{{ opera.title }} {{ opera.firstnameD }} {{ opera.lastnameD }}</td>
                        <td>{{ opera.placeName }}</td>
                        <td><i class="fa fa-arrow-right"></i></td>
                        <td>
                            <i class="fa fa-user"></i>
                            {% if opera.dateOfBirth %}
                                {{ opera.dateOfBirth }}
                            {% endif %}
                            {% if opera.sex == '0' %}
                                <i class="fa fa-mars text-info"></i>
                            {% elseif opera.sex == '1' %}
                                <i class="fa fa-venus text-danger"></i>
                            {% else  %}
                                <i class="fa fa-question-circle text-success"></i>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('patient_show', {slug: app.user.center.slug, id: opera.patient_id}) }}">{{ opera.firstname }} {{ opera.lastname }}</a>
                        </td>
                        <td class="text-right">{{ opera.made_at|date('l')|trans }}, {{ opera.made_at|date('d/M/y') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


    </div>


{% endblock %}