{% extends 'base.html.twig' %}

{% block title %}{{ 'title.resetting_request'|trans }}{% endblock %}

{% block body %}

    <div class="container">


        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        

        <div class="row">


            <div class="col">
            </div>

            <div class="col-5">

                {{ form_start(requestForm) }}

                    {{ form_row(requestForm.email) }}

                    <div>    
                        {{ 'text.resetting_help'|trans }}
                    </div>

                    <br/>

                    <div>
                        <button class="btn btn-primary">{{ 'title.resetting_request'|trans }}</button>
                    </div>          


                {{ form_end(requestForm) }}

            </div>

            <div class="col"></div>

        </div>

    </div>



{% endblock %}