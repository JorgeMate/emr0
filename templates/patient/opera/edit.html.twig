{% extends 'base93.html.twig' %}

{% block body_id 'opera_edit' %}

{% block main %}

<div class="container">

    <div class="row justify-content-between">

        <div class="col-sm-auto">

            <h4>
                
                <i class="fa fa-file-medical-alt"></i> {{opera.treatment.name}} | <i class="fa fa-user-injured"></i> {{ opera.patient.firstname }} {{ opera.patient.lastname }} &nbsp;
                {% if opera.patient.sex %}
                    <i class="fa fa-venus text-danger"></i>
                {% else %}
                    <i class="fa fa-mars text-info"></i>
                {% endif %}
                {{ opera.patient.dateOfBirth | age }}

            </h4>
    
        </div>

        <div class="col"></div>

    </div>

</div>

{{ form_start(operaForm, {'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_errors(operaForm) }}

    <div class="form-row">

        <div class="form-group col-md-3">
            {{ form_row(operaForm.user, {
                label: 'Dr.',
            }) }}
        </div>

        <div class="form-group col-md-3">
            {{ form_row(operaForm.treatment, {
                disabled: true
            }) }}

        </div>

        <div class="form-group has-feedback col-md-3">
            {{ form_row(operaForm.made_at, {
                label: 'Programada para',
                attr: {
                    class: 'js-datepicker'
                }
            }) }}
        </div>

        <div class="form-group col-md-3">
            {{ form_row(operaForm.place) }}
        </div>


    </div>

    <div class="form-row">

        <div class="form-group col-md-3">

        </div>

    </div>

    <div class="form-row">

        <div class="form-group col-md-3">

            <a href="{{ path('patient_show', {slug:app.user.center.slug, id:opera.patient.id}) }}" class="btn btn-block btn-success">
                <i class="fa fa-arrow-left"></i> {{ 'label.treatments'|trans }}
            </a>

        </div>

        <div class="form-group col-md-6"></div>

        <div class="form-group col-md-3">

            <button type="submit" class="btn btn-block btn-primary">
                <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
            </button>

        </div>

    </div>

{{ form_end(operaForm) }}



{% endblock %}