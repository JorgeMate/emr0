{% extends 'base93.html.twig' %}

{% block body_id 'patient_search' %}

{% block title %}{{ 'title.patients'|trans }}{% endblock %}

{% block main %}

    <div class="container">

        <div class="row justify-content-between">

            <div class="column">
                <h4>
                    <a href="{{ path('user_cpanel', {slug:center.slug}) }}">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>{{ center.name }}</a> 
                    | <i class="fa fa-users"></i> {{ 'title.patients'|trans }}
                </h4>
            </div>        

            <div class="column">
                <a href="{{ path('patient_new', {slug: center.slug}) }}" class="btn btn-primary">
                    <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.new'|trans }}
                </a>
            </div>        

        </div>

    </div>  

    <br>

    <div class="row justify-content-between">

        <div class="col-6">

            <form action="{{ path('patient_search', {slug:center.slug} ) }}" method="get">
                <div class="form-group">

                    <input name="q"
                           class="form-control js-search-field"
                           placeholder="{{ 'search_for'|trans }}"
                           autocomplete="off"
                           autofocus
                           data-no-results-message="{{ 'search_no_results'|trans }}"
                    >

                    <!-- value="" -->

                </div>
            </form>

        </div>

        <div class="col-3">
            <form>
                        <input  name="q"
                                class="form-control js-search-field"
                                placeholder="{{ 'Birthdate dd/mm/YYYY' }}"
                        >

            </form>
        </div>


        <div class="col-3">
            <form action="{{ path('patient_search', {slug:center.slug} ) }}" method="get">

                <div class="form-group">

                    <input  name="q"
                            class="form-control js-search-field"
                            placeholder="{{ 'Pat. N.' }}"
                    >

                </div>

            </form>
        </div>


    </div>


    <div class="container">

        <!-- /////////////////////////////7 -->
       
        <div id="results">
        </div>
       
        <!-- /////////////////////////////7 -->

    </div>
  
{% endblock %}

{% block sidebar %}

    <div class="card">
        <div class="card-header">
        <i class="fa fa-users" aria-hidden="true"></i>  {{ 'title.patient_search_info'|trans }}
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ 'title2.patient_search_info'|trans }}</h5>
            <p class="card-text">{{ 'text.resetting_help'|trans }}</p>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('search_p') }}
{% endblock %}


